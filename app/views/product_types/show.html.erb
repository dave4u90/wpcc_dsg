<div>
	<label style="padding-left: 10px;color: #fff;font-size: 18px"> Welcome <%= current_user.name%></label>
</div>
<div style="color:#fff;font-size: 12px;padding-left: 10px">
	Product Type Details
</div>
<br />
<div style="padding-left: 10px;padding-right: 10px">
	<div class="forgot_email_div" style="width: 100%">
		<div class="green_menu">
			<%= raw @product_type.product_type_name %>
		</div>
		<div style="padding:10px">
			<div class="row-fluid" style="color:#000;font-size: 14px;">
				<strong>Name:</strong> <%= raw @product_type.product_type_name %> 
			</div>
			<br />
			<h3 align="left">The Product component structure</h1>
		</div>

		<ul class="components">
			<% #since this is a testing page - we will list all formplates and components - but readonly %>
			<% curr_product_instance = nil %>
			<% @product_type.product_type_components.each do |product_type_component| %>
			<%= write_component nil, product_type_component.component, curr_product_instance %>
			<% end %>
		</ul>

	</div>
</div>
<div class="clearfix"></div>
<div style="width: 100%;height:40px;padding-top: 15px;position: relative" class="row-fluid">
	<div class="pull-right" style="padding-right: 10px"> 
		<%= link_to "Back", :back, :class=>"btn btn-success" %>
	</div>
</div>
<br />
