<footer>
  <div class="col-md-12">
    <div class="container">
      <!-- Newsletter Form -->
      <div class="col-md-6 no-padding-margin-left">
        <%= image_tag('sign-up.png', class: "sign_up_image",
                      onclick: "$('#mce-FNAME').val('');
            $('#mce-MMERGE2').val('');
            $('#mce-EMAIL').val('');$('.fancybox-overlay').show(); $('#suc_msg').html('');",
                      onblur: " if (this.value==''){this.value='Email Address'}",
                      onfocus: " if (this.value=='Email Address'){this.value=''}") %>
        <h2 class="site-map"><%= t('site_map') %></h2>
        <hr class="col-md-8 footer-hr">
        <div class="col-md-12 no-padding-margin-left">
          <div class="col-md-6 no-padding-margin-left">
            <ul class="footer-link">
              <li>
                <%= link_to t(:how_it_works), "/works" %>
              </li>
              <li>
                <% if current_user %>
                    <%= link_to t(:sign_out), signout_path %>
                <% else %>
                    <%= link_to_function t(:login), "show_login_dialog" %>
                <% end %>
              </li>
              <li>
                <%= link_to t('register'), validate_key_path(:method => :user) %>
              </li>
              <li>
                <%= link_to t('inquire'), "/contact" %>
              </li>
            </ul>
          </div>
          <!-- Footer Menu -->
          <div class="col-md-6 no-padding-margin-left">
            <ul class="footer-link">
              <li>
                <%= link_to t('home'), root_path %>
              </li>
              <li>
                <%= link_to t('about'), "/about" %>
              </li>
              <li>
                <%= link_to t('contact_us'), "/contact" %>
              </li>
              <% Language.supported_languages.each do |l| %>
                  <li>
                    <% if l.id != current_language_id %>
                        <%= link_to l.to_s, language_path(l, :sender => request.fullpath.to_s) %>
                    <% end %>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <!-- Social Menu -->
      <div class="pull-right">
        <h3 class="social-h3 col-md-12" style="margin-right: 10px;">
          <span><%= t('connect_with_us') %></span>
          <%= link_to '', "https://www.facebook.com/WorkplaceCareCentre", :class => "social fb pull-right" %>&nbsp;
          <%= link_to '', "http://www.linkedin.com/company/workplace-care-centre---occupational-health-and-safety", :class => "social lin pull-right" %>
        </h3>
      </div>
    </div>

    <div class="clearfix">&nbsp;</div>

    <!-- Footer License Text -->
    <div class="container">
      <%= t('footer_license_text') %>
      <br/>
      <%= t('footer_text') %>
    </div>
    <%= render 'layouts/fancybox' %>
  </div>
</footer>