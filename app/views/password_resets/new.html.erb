
<div class="left_right_padded_div">
	<label class="white_header_label"><%= (t(:forget_password))%></label>
	<div style="color:#fff;font-size: 12px;padding-left: 10px">
		<%= link_to t(:home), root_path %> -
			<%= link_to t(:forget_password), new_password_reset_path %>	
		<hr>
	</div>	
	<div style="" class="registration_div">
		<div class="green_menu">
			<%= t(:forget_password) %>
		</div>
		<p class="registration_inner_div" style="color: black">
			<%= t(:please_enter_email_address) %>
			<div class="alert alert-error" id="error_div">
				<%= t(:email_address_not_found) %>
			</div>

			<div style="padding-left: 10px;padding-right: 10px">
				<%= form_tag password_resets_path, :method => :post, :remote=> true do %>
					<%= label_tag t(:email) %>
					<%= text_field_tag :email, params[:email] %> 
					<%= submit_tag "Submit", class: "btn btn-success",:style=>"padding-left:20px;padding-right:20px" %>
				<% end %>	 		
			</div>
		</p>

	</div>
</div>
<script language="javascript">
	
function hide_error_messages() {	
	$(document).ready(function() {
		$('#error_div').hide()
	});
}
$(document).ready(function() {
	hide_error_messages();
});
email = "";

</script>