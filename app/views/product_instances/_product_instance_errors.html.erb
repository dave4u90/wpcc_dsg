<% if @object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        <%= t(:form_contains_errors, :errors => @object.errors.count) %>.
        <ul>
          <% @object.errors.full_messages.each do |msg| %>
              <li>* <%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>